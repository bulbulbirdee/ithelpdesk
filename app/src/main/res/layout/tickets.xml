<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/TicketCategory"
        android:layout_toRightOf="@id/status"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:text="Password Issue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Subcategory"
        android:textSize="16sp"
        android:layout_below="@id/TicketCategory"
        android:layout_toRightOf="@id/status"
        android:layout_marginLeft="8dp"
        android:text="Password expired"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/priority"
        android:layout_marginStart="-16dp"
        android:layout_toEndOf="@+id/status" />

    <TextView
        android:id="@+id/txtview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
        android:layout_below="@id/Subcategory"
        android:layout_toRightOf="@id/status"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Priority:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/priority"
        android:layout_below="@id/Subcategory"
        android:layout_toRightOf="@id/txtview"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="1"/>

    <ImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_margin="16dp"
        android:id="@+id/status"
        android:src="@drawable/yellow"
        android:scaleType="fitXY"/>


</RelativeLayout>